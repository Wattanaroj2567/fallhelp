{
  "name": "fallhelp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "backend:dev": "npm run dev --prefix backend",
    "backend:debug": "npm run debug --prefix backend",
    "backend:build": "npm run build --prefix backend",
    "backend:start": "npm run start --prefix backend",
    "mobile:start": "npm start --prefix mobile",
    "mobile:android": "npm run android --prefix mobile",
    "mobile:ios": "npm run ios --prefix mobile",
    "admin:dev": "npm run dev --prefix admin",
    "admin:build": "npm run build --prefix admin",
    "admin:preview": "npm run preview --prefix admin",
    "dev:all": "concurrently \"npm run backend:debug\" \"npm run mobile:start\" \"npm run admin:dev\"",
    "dev:backend-mobile": "concurrently \"npm run backend:debug\" \"npm run mobile:start\"",
    "dev:backend-admin": "concurrently \"npm run backend:debug\" \"npm run admin:dev\"",
    "install:all": "npm install --prefix backend && npm install --prefix mobile && npm install --prefix admin",
    "build:all": "npm run backend:build && npm run admin:build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
