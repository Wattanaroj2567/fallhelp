# ==================== DATABASE ====================
# PostgreSQL + TimescaleDB
DATABASE_URL="postgresql://username:password@localhost:5432/fallhelp_db?schema=public"

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ==================== SERVER ====================
PORT=3000
NODE_ENV="development"

# ==================== DEBUG LOGGING ====================
# Enable debug logging (use DEBUG=fallhelp:* for all namespaces)
# Available namespaces: fallhelp:server, fallhelp:mqtt, fallhelp:socket, fallhelp:auth, fallhelp:push, fallhelp:device, fallhelp:error
DEBUG="fallhelp:*"

# ==================== MQTT BROKER (IoT Devices) ====================
# Set to 'true' to disable MQTT (useful for simulator mode or development without IoT devices)
MQTT_DISABLED=true

# MQTT Broker Configuration (uncomment when using real IoT devices)
# MQTT_BROKER_URL="mqtt://localhost:1883"
# MQTT_USERNAME="mqtt_user"
# MQTT_PASSWORD="mqtt_password"


# ==================== SOCKET.IO ====================
# Optional: ถ้าต้องการแยก port (default ใช้ PORT เดียวกับ Express)
# SOCKET_PORT=3001

# ==================== CORS ====================
# Frontend/Mobile App URL for CORS
FRONTEND_URL="http://localhost:8081"

# ==================== EMAIL (Nodemailer) ====================
# Gmail SMTP Configuration
# 1. Enable 2-Step Verification in Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password below
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="yourname@gmail.com"  # Your Gmail address
EMAIL_PASSWORD="your-16-char-app-password"  # Your Gmail App Password
EMAIL_FROM="FallHelp <yourname@gmail.com>"  # Optional: Display name

# ==================== NOTE ====================
# ❌ ไม่ต้อง FCM_SERVER_KEY - ใช้ Expo Push Notification API แทน
# ✅ Backend ส่ง Push Notification ผ่าน: https://exp.host/--/api/v2/push/send
# ✅ Mobile App ต้อง setup Firebase (google-services.json) สำหรับ Android เท่านั้น
